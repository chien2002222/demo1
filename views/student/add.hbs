<form
  class="card p-3 bg-light text-center mt-3 mb-3"
  href="student/add"
  method="post"
>
  <h2 class="text-bg-success">Add new student</h2>
  <div class="form-group">
    <label class="h3 text-secondary">Name</label>
    <input type="text" name="name" class="form-control" required /></div>
  <div class="form-group">
    <label class="h3 text-secondary">Email</label>
    <input type="text" name="email" class="form-control" required /></div>
  <div class="form-group">
    <label class="h3 text-secondary">Gender</label>
    <input type="number" name="gender" class="form-control" required /></div>
  <div class="form-group">
    <label class="h3 text-secondary">Image</label>
    <input type="text" name="image" class="form-control" required /></div>
  <div class="form-group">
  <div class="form-group">
    <label class="h3 text-secondary">Date</label>
    <input type="date" name="dob" class="form-control" required /></div>
  <div class="form-group">
   <div class="form-group">
    <label class="h3 text-secondary">Year</label>
    <input type="text" name="year" class="form-control" required /></div>
  <div class="form-group">
   <div class="form-group">
  <label class="h3 text-secondary">Grade</label>
    <input type="number" name="grade" class="form-control" required /></div>
  <div class="form-group">
    <input type="submit" class="btn btn-primary mt-3" value="Add" /></div>
</form>